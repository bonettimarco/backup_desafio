<!-- as classes customizadas de css foram incluídas em assets/documento.css -->
<div class="jumbotron">
  <p id="notice"><%= notice %></p>
<h1>Listagem dos Documentos</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documentos.each do |documento| %>
      <tr>
        <th>Documento número</td>
        <th>Mostrar/Substituir o documento</td>
        <th>Apagar o arquivo</td>
      </tr>
      <tr>
        <td><%= documento.id %> - <%= render 'total', documento: documento%></td>
        <td><%= link_to 'Show', documento %>//<%= link_to 'Edit', edit_documento_path(documento) %></td>
        <td><%= link_to 'Destroy', documento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <div class="btn btn-success btn-block">
    <%= link_to 'Ver dados do BD', stores_path %>
    </div>
    <div class="btn btn-info btn-block">
    <%= link_to 'Inserir novo relatório', new_documento_path %>
    </div>
</div>
