<div class="jumbotron">
  <p id="notice"><%= notice %></p>
<h1>Listagem dos Documentos</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documentos.each do |documento| %>
      <tr>
        <th>Documento número</td>
        <th>Mostrar o documento</td>
        <th>Substituir este arquivo</td>
        <th>Apagar o arquivo</td>
      </tr>
      <tr>
        <td><%= render 'total', documento: documento%></td>
        <td><%= link_to 'Show', documento %></td>
        <td><%= link_to 'Edit', edit_documento_path(documento) %></td>
        <td><%= link_to 'Destroy', documento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Inserir novo relatório', new_documento_path %>
</div>
